{
  "name": "@deevy/contracts",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Deevy",
  "license": "MIT",
  "scripts": {
    "test": "npx hardhat test",
    "test:coverage": "npx hardhat coverage --network coverage",
    "build": "npm run compile",
    "compile": "npx hardhat compile",
    "typechain": "hardhat typechain",
    "tx-l2-info": "npx hardhat tx-l2-info",
    "tx-l2-hashes": "npx hardhat tx-l2-hashes",

    "owner-claim:arb_mainnet": "npx hardhat owner-claim --network arb_mainnet",
    "owner-claim:arb_testnet": "npx hardhat owner-claim --network arb_testnet",
    "tx-l2-redeem:arb_mainnet": "npx hardhat tx-l2-redeem --network arb_mainnet",
    "set-l2-target:eth_rinkeby": "npx hardhat set-l2-target --network eth_rinkeby",
    "set-l2-target:eth_mainnet": "npx hardhat set-l2-target --network eth_mainnet",
    "deploy-l1-rinkeby:eth_rinkeby": "npx hardhat deploy-l1-rinkeby --network eth_rinkeby",
    "deploy-l1-mainnet:eth_mainnet": "npx hardhat deploy-l1-mainnet --network eth_mainnet",
    "loot-mint:eth_rinkeby": "npx hardhat loot-mint --network eth_rinkeby",
    "loot-transfer:eth_rinkeby": "npx hardhat loot-transfer --network eth_rinkeby",
    "warp-loot:eth_rinkeby": "npx hardhat warp-loot --network eth_rinkeby",
    "bridge-set-l1-target:arb_testnet": "npx hardhat bridge-set-l1-target --network arb_testnet",
    "bridge-set-l1-target:arb_mainnet": "npx hardhat bridge-set-l1-target --network arb_mainnet",
    "deploy-l2:arb_testnet": "npx hardhat deploy-l2 --network arb_testnet",
    "deploy-l2:arb_mainnet": "npx hardhat deploy-l2 --network arb_mainnet",
    "set-minter:arb_testnet": "npx hardhat set-minter --network arb_testnet",
    "print-info:arb_testnet": "npx hardhat print-info --network arb_testnet",
    "deevy-print-token-info:arb_testnet": "npx hardhat deevy-print-token-info --network arb_testnet",
    "deevy-print-info:arb_testnet": "npx hardhat deevy-print-info --network arb_testnet",
    "deevy-print-info:arb_mainnet": "npx hardhat deevy-print-info --network arb_mainnet",
    "format:sol": "prettier --write contracts/**/**.sol",
    "format:ts": "prettier --write \"{scripts,src,tasks,test}/**/*.ts\"",
    "format:all": "yarn format:sol && yarn format:ts",
    "pre-commit-hook-tasks": "yarn format:sol && yarn format:ts && yarn test:coverage"
  },
  "devDependencies": {
    "@gnosis.pm/mock-contract": "^4.0.0",
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "@nomiclabs/hardhat-etherscan": "^2.1.1",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@openzeppelin/contracts": "^3.4.0",
    "@openzeppelin/contracts-upgradeable": "^3.4.1",
    "@openzeppelin/hardhat-upgrades": "^1.8.2",
    "@solidity-parser/parser": "^0.11.1",
    "@typechain/ethers-v5": "^4.0.0",
    "@types/lodash": "^4.14.165",
    "@types/mocha": "^8.0.4",
    "@types/node": "^14.14.9",
    "@typescript-eslint/eslint-plugin": "^4.4.1",
    "@typescript-eslint/parser": "^4.8.2",
    "arb-ts": "^0.0.36",
    "bignumber.js": "^9.0.1",
    "chai": "^4.2.0",
    "dotenv": "^8.2.0",
    "eslint": "^7.14.0",
    "eslint-config-airbnb-typescript": "^12.0.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "ethereum-waffle": "^3.2.0",
    "ethers": "^5.1.2",
    "hardhat": "^2.0.11",
    "hardhat-contract-sizer": "^2.0.3",
    "hardhat-gas-reporter": "^1.0.4",
    "hardhat-typechain": "^0.3.3",
    "husky": "^4.3.0",
    "is-svg": "^4.3.1",
    "leche": "^2.3.0",
    "lodash": "^4.17.20",
    "prettier": "^2.2.0",
    "prettier-plugin-solidity": "^1.0.0-beta.4",
    "solidity-coverage": "^0.7.15",
    "truffle-assertions": "^0.9.2",
    "ts-generator": "^0.1.1",
    "ts-node": "^9.0.0",
    "typechain": "^4.0.0",
    "typescript": "^4.1.2"
  },
  "dependencies": {
    "@dogdefidev/utils": "^0.2.2",
    "@types/lodash": "^4.14.165",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "lodash": "^4.17.20"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn pre-commit-hook-tasks"
    }
  }
}
